<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="162.0" prefWidth="436.0" styleClass="tree-plant-container" stylesheets="@../../styles/tree-plant.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codefornature.TreePlantController">
   <children>
      <Label text="Name your plant" />
      <VBox prefHeight="200.0" prefWidth="376.0">
         <children>
            <TextField fx:id="treeNameTextField" promptText="Name your tree here" style="-fx-background-color: transparent;" styleClass="name-label" />
            <Label fx:id="errorMessageLabel" styleClass="error-message" />
         </children>
      </VBox>
      <HBox styleClass="button-container">
         <children>
            <Button fx:id="cancelButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCancelClicked" text="Cancel" HBox.hgrow="ALWAYS" />
            <Button fx:id="plantButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onPlantClicked" styleClass="plant-button" text="Plant" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
